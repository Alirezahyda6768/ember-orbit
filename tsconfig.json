{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/*": ["tests/dummy/app/*", "app/*"],
      "ember-orbit": ["addon"],
      "ember-orbit/*": ["addon/*"],
      "ember-orbit/test-support": ["addon-test-support"],
      "ember-orbit/test-support/*": ["addon-test-support/*"],
      "@ember/destroyable": ["node_modules/ember-destroyable-polyfill"],
      "*": ["types/*"]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ]
}
